{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "includeFiles": ["Frontend/**"] }
    },
    {
      "src": "Backend/server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["Backend/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/Frontend/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/Backend/$1"
    }
  ]
}
